    # ------- another entry -------------
	 GtkWidget	::focus-line-width	= 2
	 GtkWidget	::focus-padding		= 1
	# bg[ACTIVE]				        = shade (0.78, @bg_color)
	# bg[NORMAL]				        = shade (2.20, @bg_color)
	# bg[PRELIGHT]				    = shade (1.18, @selected_bg_color)
	# bg[SELECTED]				    = shade (0.9, @selected_bg_color)
