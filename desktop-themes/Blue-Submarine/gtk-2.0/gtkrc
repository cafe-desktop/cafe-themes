style "murrine-checkbutton" {
	engine "pixmap" {
		image {
			function = CHECK
			recolorable = TRUE
			state = NORMAL
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = PRELIGHT
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = ACTIVE
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = INSENSITIVE
			shadow = OUT
			overlay_file = "assets/checkbox-unchecked-insensitive.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = NORMAL
			shadow = IN
			overlay_file = "assets/checkbox-checked.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = PRELIGHT
			shadow = IN
			overlay_file = "assets/checkbox-checked.png"
			overlay_stretch = FALSE
		}

		image {
			function = CHECK
			recolorable = TRUE
			state = ACTIVE
			shadow = IN
			overlay_file = "assets/checkbox-checked.png"
			overlay_stretch = FALSE
		}


		image {
			function = CHECK
			recolorable = TRUE
			state = INSENSITIVE
			shadow = IN
			overlay_file = "assets/checkbox-checked-insensitive.png"
			overlay_stretch = FALSE
		}

		image {
			function = FLAT_BOX
			recolorable = TRUE
			stretch = TRUE
			file = "assets/null.png"
		}
	}
}

